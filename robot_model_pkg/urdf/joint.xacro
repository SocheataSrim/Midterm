<?xml version="1.0"?>
<robot name="joint" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Define a generic wheel joint -->
  <xacro:macro name="wheel_joint">
    <joint name="my_wheel_joint" type="continuous">
      <origin xyz="0 0 0" rpy="0 0 0"/> <!-- Adjust origin and orientation as needed -->
      <parent link="parent_link_name"/> <!-- Replace 'parent_link_name' with actual parent link name -->
      <child link="child_link_name"/>   <!-- Replace 'child_link_name' with actual child link name -->
      <axis xyz="1 0 0"/>               <!-- Define the joint axis -->
    </joint>
  </xacro:macro>

</robot>
